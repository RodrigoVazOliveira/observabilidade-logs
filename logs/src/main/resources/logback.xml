<configuration>
	<property name="LOG_PATH" value="logs/log-api-cursos.log" />
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %green([%thread]) %-5level %logger{36}.%M
				[%line] - %msg%n</pattern>
		</encoder>
	</appender>
		
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>