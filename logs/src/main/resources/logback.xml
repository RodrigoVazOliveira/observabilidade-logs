<configuration>
	<property name="LOG_PATH" value="logs/log-api-cursos.log" />
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-60(%d{HH:mm:ss.SSS} %green([%thread])) %-5level %logger{0} %M - %msg %n %rEx{short}</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>