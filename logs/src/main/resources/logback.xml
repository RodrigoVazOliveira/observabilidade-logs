<configuration>
	<property name="LOG_PATH" value="logs/log-api-cursos.log" />
	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %green([%thread]) %-5level %logger{36}.%M
				[%line] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH}</file>
		<append>true</append>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH}.%d{yyyy-MM-dd}.%i.log.gz
			</fileNamePattern>
			<maxFileSize>100KB</maxFileSize>
			<totalSizeCap>200KB</totalSizeCap>
			<maxHistory>12</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %green([%thread]) %-5level %logger{36}.%M
				[%line] - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- controlando log especifico de uma classe pegando um level especifico. 
		<logger name="br.com.alura.logs.controller.CursoController" level="info" 
		additivity="false"> <appender-ref ref="FILE" /> </logger> -->
		
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<!--  <appender-ref ref="FILE" /> -->
	</root>
</configuration>